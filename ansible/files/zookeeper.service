[Unit]
Description=Apache Zookeeper server
Documentation=http://zookeeper.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
ExecStart=/opt/kafka_2.12-2.6.1/bin/zookeeper-server-start.sh /opt/kafka_2.12-2.6.1/config/zookeeper.properties
ExecStop=/opt/kafka_2.12-2.6.1/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target
